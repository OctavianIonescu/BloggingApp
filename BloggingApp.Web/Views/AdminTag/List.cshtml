@model List<BloggingApp.Web.Models.Domain.Tag>
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>List Tags - Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    @if(Model !=null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tag in Model)
                {
                    <tr>
                        <td>@tag.ID</td>
                        <td>@tag.name</td>
                        <td>@tag.displayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminTag" asp-action="Edit" asp-route-id="@tag.ID">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tags Found!</p>
    }
</div>